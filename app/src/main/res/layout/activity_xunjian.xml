<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".activity.Xunjian">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:drawableLeft="@drawable/jf_back"
                android:drawablePadding="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:text="巡检记录"/>
            <TextView
                android:id="@+id/tv_uploude"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="上传机器位置"
                android:textColor="@color/text_white_color"
                android:textSize="15sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:background="@color/newtime"
            android:textColor="@color/text_bg_color"
            android:textSize="40px"
            android:textStyle="bold"
            android:gravity="center"
            android:text="测试时间"
            android:layout_height="100px"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:padding="40px"
            android:orientation="vertical"
            android:background="@drawable/white">
            <TextView
                android:id="@+id/tv_juwei"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="40px"
                android:drawableLeft="@drawable/jiqi"
                android:textColor="@color/title_color"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="机器地址"/>
            <TextView
                android:id="@+id/tv_bianhao"
                android:layout_width="wrap_content"
                android:textSize="36px"
                android:layout_marginTop="20px"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:text="设备编号:"/>
            <TextView
                android:id="@+id/tv_vision"
                android:layout_width="wrap_content"
                android:textSize="36px"
                android:layout_marginTop="20px"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:text="设备编号:"/>
            <TextView
                android:id="@+id/tv_anzhuang_time"
                android:layout_width="wrap_content"
                android:textSize="36px"
                android:layout_marginTop="20px"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:text="设备编号:"/>
            <TextView
                android:id="@+id/tv_shequ"
                android:layout_width="wrap_content"
                android:textSize="36px"
                android:layout_marginTop="20px"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:text="设备编号:"/>
            <TextView
                android:id="@+id/tv_adress"
                android:layout_width="wrap_content"
                android:textSize="36px"
                android:layout_marginTop="20px"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:text="设备编号:"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/xunjia_list"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/tv_ok_comnit"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_alignParentRight="true"
            android:layout_margin="10px"
            android:background="@drawable/green_bg"
            android:gravity="center"
            android:layout_marginTop="20px"
            android:padding="5dp"
            android:text="提交"
            android:textColor="@color/text_white_color"
            android:textSize="40px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120px" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>