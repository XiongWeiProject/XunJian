<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:id="@+id/id_ll_edit"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.zhhome.xunjian.view.CommonEditText
            android:id="@+id/id_common_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLength="500"
            android:background="@null"
            android:hint=""
            android:lineSpacingExtra="3dp"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:textColorHint="@color/char_color99"
            android:textColor="@color/char_color66"
            android:textSize="15sp"
            android:minHeight="120dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:gravity="right|bottom"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            >

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/char_colorbb"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_tv_max_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/char_colorbb"
                android:textSize="12sp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>